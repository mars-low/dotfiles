LC_ALL=en_US.UTF-8
LANG=en_US.UTF-8

DOTNET_CLI_TELEMETRY_OPTOUT=1
DOTNET_NOLOGO=1

HOME=/home/codespace
SHELL=/usr/bin/zsh
CARGO_HOME=$HOME/.cargo

# custom personal variables
REPOS_PATH=$HOME/repos
PERSONAL_PATH=$HOME/repos/personal
UTILS_PATH=$PERSONAL_PATH/utils

XDG_DATA_HOME=$PERSONAL_PATH/$HOME/.local/share
XDG_CONFIG_HOME=$PERSONAL_PATH/$HOME/.config
XDG_CACHE_HOME=$PERSONAL_PATH/$HOME/.cache

PIPX_HOME=$UTILS_PATH/pipx
PIPX_BIN_DIR=$PIPX_HOME/bin
PIPX_MAN_DIR=$PIPX_HOME/man

DISABLE_RTKIT=y
XDG_RUNTIME_DIR=$HOME
PIPEWIRE_RUNTIME_DIR=$HOME
PULSE_RUNTIME_DIR=$HOME

ANDROID_HOME=$REPOS_PATH/android/android-sdk
ANDROID_AVD_HOME=$ANDROID_HOME/system-images

LOCAL_FLATPAK_PATH=$UTILS_PATH/flatpak
FLATPAK_USER_DIR=$LOCAL_FLATPAK_PATH/user
FLATPAK_SYSTEM_DIR=$LOCAL_FLATPAK_PATH/var/lib
FLATPAK_SYSTEM_CACHE_DIR=$LOCAL_FLATPAK_PATH/var/tmp
FLATPAK_CONFIG_DIR=$LOCAL_FLATPAK_PATH/etc
FLATPAK_RUN_DIR=$LOCAL_FLATPAK_PATH/run

path+=("/usr/sbin")
path+=("$HOME/bin")
path+=("$HOME/.local/bin")
path+=("$HOME/.cargo/bin")
path+=("$HOME/bluez/tools")
path+=("$HOME/bluez/monitor")
path+=("$UTILS_PATH/r2env/versions/radare2@git/bin")
path+=("$UTILS_PATH/cargo/bin")
path+=("$UTILS_PATH/go/bin")
path+=("$UTILS_PATH/pipx/bin")
path+=("$UTILS_PATH/dotnet")
path+=("$UTILS_PATH/bin")
path+=("$UTILS_PATH/app")
path+=("$ANDROID_HOME/emulator")
